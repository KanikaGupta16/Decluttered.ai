# Decluttered.ai Environment Configuration
# Copy this file to .env and fill in your values

# Required: Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Camera Configuration
CAMERA_INDEX=0                          # Camera device index (0 for default camera)
ANALYSIS_DURATION_SECONDS=10            # How long each capture session runs
MAX_CAPTURES=6                          # Maximum images captured per session
CAPTURE_COOLDOWN_SECONDS=1.0            # Time between individual captures

# YOLO Detection Configuration
YOLO_MODEL_PATH=yolov9c.pt              # YOLO model file (downloads automatically)
CONFIDENCE_THRESHOLD=0.25               # Minimum detection confidence (0.0-1.0)

# Image Processing Configuration
CROP_BORDER_PERCENTAGE=0.3              # Border around cropped objects (30%)

# Directory Configuration (optional)
CAPTURE_FOLDER=captures                 # Where captured images are stored
CROPPED_FOLDER=cropped_resellables      # Where processed images are saved
REPORT_FILENAME=analysis_report_resellables.txt

# Agent Network Configuration (optional)
CAMERA_AGENT_PORT=8001
DETECTION_AGENT_PORT=8002
AI_EVALUATOR_PORT=8003
IMAGE_PROCESSOR_PORT=8004
COORDINATOR_PORT=8005

# Logging Configuration (optional)
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=false                       # Enable file logging

# Performance Tuning (optional)
YOLO_DEVICE=auto                        # auto, cpu, cuda
BATCH_SIZE=1                            # Images processed per batch
MAX_CACHE_SIZE=100                      # Maximum cached results